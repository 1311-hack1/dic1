# Environment Configuration
PORT=3000
NODE_ENV=development

# Your Android app package name
ANDROID_PACKAGE_NAME=com.yourcompany.yourapp

# Your Android app signing certificate digest (SHA-256 of the signing cert)
ANDROID_CERT_DIGEST=your_app_signing_cert_sha256_digest

# CA Configuration for DIC issuance
# Option 1: HashiCorp Vault
VAULT_ADDR=https://your-vault-instance.com
VAULT_TOKEN=your_vault_token
VAULT_PKI_ROLE=device-identity

# Option 2: Local CA (development only)
CA_PRIVATE_KEY_PATH=./certs/ca-private.pem
CA_CERTIFICATE_PATH=./certs/ca-cert.pem

# Attestation settings
ATTESTATION_TIMEOUT_MS=30000
NONCE_EXPIRY_MS=300000

# Security settings
REQUIRE_STRONGBOX=false
REQUIRE_ROLLBACK_RESISTANCE=false
MIN_OS_VERSION=8.0
MIN_PATCH_LEVEL=2023-01-01
